<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mylist"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAdminTitle"
        style="@style/text_title_auth"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Quản lý người dùng"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnSearchUser"
        style="@style/button"
        android:layout_margin="20dp"
        android:text="Tìm kếm người dùng" />

    <Button
        android:id="@+id/btnListUser"
        style="@style/button"
        android:layout_margin="20dp"
        android:text="Danh sách người dùng" />

</LinearLayout>